<%- include('../../partials/header.ejs') %>
    <body>
        <%- include('../../partials/navbar.ejs') %>
        <div class="container">
            <hr>
            <div class="card mt-4">
                <div class="card-header">
                    <h2>Editar jogos</h2>
                </div>
                <div class="card-body">
                    <form action="/games/update" method="POST" enctype="multipart/form-data">
                        <input type="text" name="title" class="form-control" placeholder="Título"><br>
                        <input type="file" name="image" class="form-control" placeholder="Imagem"><br>
                        <input type="text" name="price" class="form-control" placeholder="00.00"><br>
                        <input type="url" name="url" class="form-control" placeholder="Link para compra">
                        <textarea name="desc" placeholder="Descrição"></textarea>
                        <select name="category" class="form-control">
                            <% categories.forEach(category => { %>
                                <option value="<%= category.id %>"><%= category.title %></option>
                            <% }) %>
                        </select>
                        <button type="submit" class="btn btn-success btn-block">Atualizar</button>
                    </form>
                </div>
            </div>
        </div>
    </body>    
<%- include('../../partials/footer.ejs') %>